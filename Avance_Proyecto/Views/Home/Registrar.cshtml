@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registrar</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="contenedor d-flex flex-column">
        <div class="formulario" id="formulario">
            <form>
                <div class="form-group">
                    <label for="Usuario">Usuario</label>
                    <input type="email" class="form-control" id="Usuario" aria-describedby="emailHelp" placeholder="User">
                </div>
                <div class="form-group">
                    <label for="Pass">Password</label>
                    <input type="password" class="form-control" id="Pass">
                </div>
                <div class="d-flex justify-content-around mt-4">
                    <button class="btn btn-warning w-40" id="registrarse">Registrarse</button>
                </div>
            </form>
        </div>

        <div class="m-auto d-none alerta" id="alerta">
            <p>Usuario creado exitosamente</p>
            <a class="btn btn-primary" asp-controller="Home" asp-action="IniciarSesion">Aceptar</a>
        </div>
    </div>

    <style>

        .contenedor {
            width: 100vw;
            height: 95vh
        }

        .formulario {
            width: 400px;
            height: 300px;
            margin: 100px auto;
        }

        .alerta {
            width: 400px;
            height: 120px;
            background-color: red;
            margin-top: 200px;
            justify-content: center;
            align-content: center;
            text-align: center;
            border-radius: 15px;
        }

            .alerta p {
                margin-top: 30px
            }
    </style>

    <script>
        let form = document.getElementById('formulario');
        let alerta = document.getElementById('alerta');
        let btn = document.getElementById('registrarse');

        btn.addEventListener('click', (e) => {
            e.preventDefault();
            form.classList.add('d-none');
            alerta.classList.remove('d-none');
            alerta.classList.remove('d-flex');
        })

    </script>

</body>
</html>

