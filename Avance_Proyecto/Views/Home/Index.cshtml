    <main class="d-flex ">
        <div class="img m-auto">
            <img width="250" src="~/img/avatar.svg" />
            <h1>DevArts</h1>
        </div>  
    </main>

    <style>
        body {
            background-color: orange
        }

        nav {
            background-color: blue;
        }

        nav li{
            margin-right:20px;
            color: #fff;
        }
        main{
            width:100vw;
            height:80vh;
        }
        main h1{
            text-align:center;
            margin-top: 20px
        }
        .img{
            margin-top:100px;
        }
        .centro{
            margin:100px auto
